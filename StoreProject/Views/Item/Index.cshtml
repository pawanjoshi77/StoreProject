@model IEnumerable<StoreProject.Models.Item>
@{
    ViewBag.Title = "Index";
}

<h2>Items</h2>
<div class="additem">
    @Html.ActionLink("Create New Item", "Create")
</div>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.ItemName)</th>
        <th>@Html.DisplayNameFor(model => model.ItemPrice)</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
        <td>@Html.DisplayFor(modelItem => item.ItemPrice)</td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ItemId })|
            @Html.ActionLink("Details", "Details", new { id = item.ItemId})|
            @Html.ActionLink("Delete", "Delete", new { id = item.ItemId})
        </td>
    </tr>
}

</table>

